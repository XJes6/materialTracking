@using MaterialTracking.Types
@{
    ViewBag.Title = "OrderStatu Management";
}
<div style="height: 100%;">
    @(Html.Kendo().Grid<OrderStatu>()
          .Name("gridModules")
          .Columns(columns =>
          {
              columns.Bound(a => a.OrderStatusID).Visible(true);
              columns.Bound(a => a.StatusName);
              //columns.Bound(a => a.ItemNumber).Title("ItemNumber");
              //columns.Bound(a => a.AddressLine1).Visible(false);
              //columns.Bound(a => a.AddressLine2).Visible(false);
              //columns.Bound(a => a.City).Visible(false);
              //columns.Bound(a => a.State).Visible(false);
              //columns.Bound(a => a.Zip).Visible(false);
              //columns.Bound(a => a.ContactName).Title("Contact Name");
              // columns.Bound(a => a.ContactPhone).Title("Contact Phone");
              //columns.Bound(a => a.IsActive).Title("Active");
          })
          .Editable(editable => editable.Mode(GridEditMode.PopUp))
          .Sortable()
          .ColumnMenu()
          .Filterable()
          .AutoBind(true)
          .HtmlAttributes(new { style = "height: 100%;" })
          .DataSource(dataSource => dataSource
              .Ajax()
              .Model(model =>
              {
                  model.Id(p => p.OrderStatusID);
              })
              .Read(read => read.Action("OrderStatuSelectAll", "OrderStatu"))
              .Update(update => update.Action("OrderStatuUpdate", "OrderStatu"))
              .Create(create => create.Action("OrderStatuCreate", "OrderStatu"))
              .Destroy(destroy => destroy.Action("OrderStatuDestroy", "OrderStatu")))
    )
</div>
